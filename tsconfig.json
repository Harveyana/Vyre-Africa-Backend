    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
